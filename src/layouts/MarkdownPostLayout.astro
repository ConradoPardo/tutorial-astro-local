---
import BaseLayout from '../layouts/BaseLayout.astro';
const { frontmatter } = Astro.props;

---
<BaseLayout pageTitle={frontmatter.title}>
    <p><small>Escrito por <b>{frontmatter.author}</b> el {frontmatter.pubDate.toString().slice(0,10)}</small></p>
    <p><em>{frontmatter.description}</em></p>
    <div class="tags">
        {frontmatter.tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
            ))}
    </div>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="400">
    <slot />
</BaseLayout>

<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 2rem;
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .3em 0.5em;
      font-size: 1em;
      background-color: #F8FCFD;
    }
</style>